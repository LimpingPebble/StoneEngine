{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug Config",
      "description": "Configure project using Ninja generator",
      "binaryDir": "${sourceDir}/build/debug",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "USE_SYSTEM_GLM": {
          "type": "BOOL",
          "value": "ON"
        },
        "USE_SYSTEM_PAUSE": {
          "type": "BOOL",
          "value": "OFF"
        },
        "SKIP_TESTS": {
          "type": "BOOL",
          "value": "OFF"
        }
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release",
      "displayName": "Release Config",
      "inherits": "debug",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "doxygen",
      "displayName": "Generate DOxygen documentation",
      "binaryDir": "${sourceDir}/build/doxygen",
      "cacheVariables": {
        "FULL_CONFIGURE": {
          "type": "BOOL",
          "value": "OFF"
        },
        "SKIP_TESTS": {
          "type": "BOOL",
          "value": "ON"
        },
        "ENABLE_DOCS": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug-tests",
      "configurePreset": "debug",
      "targets": [
        "test"
      ]
    },
    {
      "name": "release-tests",
      "configurePreset": "release",
      "targets": [
        "test"
      ]
    },
    {
      "name": "debug-examples",
      "configurePreset": "debug",
      "targets": [
        "examples"
      ]
    },
    {
      "name": "release-examples",
      "configurePreset": "release",
      "targets": [
        "examples"
      ]
    },
    {
      "name": "generate-doxygen",
      "configurePreset": "doxygen",
      "targets": [
        "doxygen"
      ]
    }
  ]
}
